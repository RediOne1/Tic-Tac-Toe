<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="pl.softpartner.tictactoe.GameFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <pl.softpartner.tictactoe.AutoResizeTextView
            android:layout_width="0dp"
            android:id="@+id/playerX"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:gravity="start|center_vertical"
            android:maxLines="1"
            android:text="@string/playerX"
            android:textSize="100sp" />

        <pl.softpartner.tictactoe.AutoResizeTextView
            android:layout_width="0dp"
            android:id="@+id/playerO"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:gravity="end|center_vertical"
            android:maxLines="1"
            android:text="@string/playerO"
            android:textSize="100sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:background="@android:color/black"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <pl.softpartner.tictactoe.AutoResizeTextView
                android:id="@+id/field1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:gravity="center"
                android:textSize="300sp" />

            <pl.softpartner.tictactoe.AutoResizeTextView
                android:id="@+id/field2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:gravity="center"
                android:textSize="300sp" />

            <pl.softpartner.tictactoe.AutoResizeTextView
                android:id="@+id/field3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:gravity="center"
                android:textSize="300sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <pl.softpartner.tictactoe.AutoResizeTextView
                android:id="@+id/field4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:gravity="center"
                android:textSize="300sp" />

            <pl.softpartner.tictactoe.AutoResizeTextView
                android:id="@+id/field5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:gravity="center"
                android:textSize="300sp" />

            <pl.softpartner.tictactoe.AutoResizeTextView
                android:id="@+id/field6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:gravity="center"
                android:textSize="300sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <pl.softpartner.tictactoe.AutoResizeTextView
                android:id="@+id/field7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:gravity="center"
                android:textSize="300sp" />

            <pl.softpartner.tictactoe.AutoResizeTextView
                android:id="@+id/field8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:gravity="center"
                android:textSize="300sp" />

            <pl.softpartner.tictactoe.AutoResizeTextView
                android:id="@+id/field9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:gravity="center"
                android:textSize="300sp" />

        </LinearLayout>
    </LinearLayout>

    <pl.softpartner.tictactoe.AutoResizeTextView
        android:id="@+id/reset_button"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:background="@drawable/button_background_indicator"
        android:gravity="center"
        android:text="Reset"
        android:textSize="100sp" />
</LinearLayout>
